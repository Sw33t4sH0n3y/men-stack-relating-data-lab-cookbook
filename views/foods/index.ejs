<%- include('../partials/_navbar.ejs') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Pantry</title>
  </head>
  <body>
<h1>Enter the Vibe Tribe Portal</h1>
    <a href="/users/<%= user._id %>/foods/new">Add new Item</a>

    <% if (pantry.length > 0) { %>

    <ul>
     <% pantry.forEach(food => { %>
       <li>
        <strong><%= food.name %></strong> - <%= food.category %>
        <br>
        Calories: <%= food.calories %>
        <br>
        <%= food.description %>
        <br>
        <a href="/users/<%= user._id %>/foods/<%= food._id %>/edit">Edit</a>
        <form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
          <button type="submit" onclick="return 
          confirm('Are you sure')">Delete</button>  
        </form>
    </li>
     <% }) %>
    </ul>
    <% } else { %>
    <p>The pantry is bone dry</p>
   <% } %>
  </body>
</html>


